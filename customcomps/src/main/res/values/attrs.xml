<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="UyumButton">

        <attr name="ButtonTitle" format="string"/>
        <attr name="ImageOnly" format="boolean"/>
        <attr name="ButtonType" format="enum" >
            <enum name="add" value="1"/>
            <enum name="arrowdown" value="2"/>
            <enum name="arrowright" value="3"/>
            <enum name="date" value="4"/>
            <enum name="delete" value="5"/>
            <enum name="download" value="6"/>
            <enum name="filter" value="7"/>
            <enum name="list" value="8"/>
            <enum name="refresh" value="9"/>
            <enum name="save" value="10"/>
            <enum name="settings" value="11"/>
            <enum name="signal" value="12"/>
            <enum name="sort" value="13"/>
            <enum name="CHECKBOX" value="0"/>
        </attr>
        <attr name="ImageDrawable" format="integer"/>

    </declare-styleable>

    <declare-styleable name="UyumSpinner">
        <attr name="WebServiceUrl" format="string"/>
        <attr name="Namespace" format="string"/>
        <attr name="MethodName" format="string"/>
        <attr name="FieldToShow" format="string"/>
        <attr name="FieldToReturn" format="string"/>
        <attr name="Label" format="string"/>
    </declare-styleable>

    <declare-styleable name="UyumList">
        <attr name="Title" format="string"/>
        <attr name="ItemsWithButton" format="boolean"/>
        <attr name="ShowClearButton" format="boolean"/>
        <attr name="Selectable" format="enum" >
            <enum name="No" value="0"/>
            <enum name="AllowSingleSelection" value="1"/>
            <enum name="AllowMultipleSelections" value="2"/>
        </attr>
        <attr name="Button_Type" format="enum" >
            <enum name="add" value="1"/>
            <enum name="arrowdown" value="2"/>
            <enum name="arrowright" value="3"/>
            <enum name="date" value="4"/>
            <enum name="delete" value="5"/>
            <enum name="download" value="6"/>
            <enum name="filter" value="7"/>
            <enum name="list" value="8"/>
            <enum name="refresh" value="9"/>
            <enum name="save" value="10"/>
            <enum name="settings" value="11"/>
            <enum name="signal" value="12"/>
            <enum name="sort" value="13"/>
            <enum name="CHECKBOX" value="14"/>
        </attr>
        <attr name="UrlForWS" format="string"/>
        <attr name="NamespaceForWS" format="string"/>
        <attr name="MethodNameForWS" format="string"/>
        <attr name="FieldOfObjectToShow" format="string"/>
        <attr name="FieldOfObjectToReturn" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomListItem">
        <attr name="WithButton" format="boolean"/>
        <attr name="TypeOfButton" format="enum" >
            <enum name="add" value="1"/>
            <enum name="arrowdown" value="2"/>
            <enum name="arrowright" value="3"/>
            <enum name="date" value="4"/>
            <enum name="delete" value="5"/>
            <enum name="download" value="6"/>
            <enum name="filter" value="7"/>
            <enum name="list" value="8"/>
            <enum name="refresh" value="9"/>
            <enum name="save" value="10"/>
            <enum name="settings" value="11"/>
            <enum name="signal" value="12"/>
            <enum name="sort" value="13"/>
            <enum name="CHECKBOX" value="14"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="UyumEditText">
        <attr name="TextType" format="enum" >
            <enum name="EMail" value="1"/>
            <enum name="Phone" value="2"/>
            <enum name="Name" value="3"/>
            <enum name="Date" value="4"/>
            <enum name="Password" value="5"/>
            <enum name="TCKN" value="6"/>

        </attr>
        <attr name="Placeholder" format="string"/>
    </declare-styleable>

</resources>